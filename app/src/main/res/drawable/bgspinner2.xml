<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape android:shape="rectangle">

                    <padding android:right="10dp"
                        android:left="10dp"
                        android:top="10dp"
                        android:bottom="10dp"/>
                    <stroke android:width="0px" android:color="#0004fa" />
                    <solid android:color="@color/appcolor"/>
                    <corners android:radius="15dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/smalling"

                    />

            </item>

        </layer-list>

    </item>

</selector>